{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug Fullstack App",
            "configurations": [
                "Run Fullstack App",
                "Launch Chrome against localhost"
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Fullstack App",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"], // Runs "npm run start"
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://192.168.4.21:3000/", // Ensure this matches your client URL
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}
